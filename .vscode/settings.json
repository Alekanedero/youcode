{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.detectIndentation": true,
  "editor.fontFamily": "'JetBrains Mono', 'Fira Code', Menlo, Monaco, 'Courier New', monospace",
  "editor.tabSize": 3,
  "editor.lineHeight": 22,
  "editor.fontSize": 12,
  "editor.renderWhitespace": "none",
  "editor.minimap.enabled": false,
  "editor.renderControlCharacters": true,

  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "GitHub Dark",
  "workbench.editorAssociations": {
    "*.md": "vscode.markdown.preview.editor"
  },
  "workbench.colorCustomizations": {
    // EXPLORATEUR DE FICHIER
    "tree.indentGuidesStroke": "#fdfdfd", //Couleur des guides actifs
    "tree.inactiveIndentGuidesStroke": "#323333", // Couleur des guides inactifs

    // "sideBar.background": "#1E1E1E", // Couleur de fond
    // "sideBar.foreground": "#D4D4D4", // Couleur du texte
    // "sideBar.border": "#303030", // Couleur de la bordure
    // "sideBarSectionHeader.background": "#252526", // Fond des titres (ex: "EXPLORER")
    // "sideBarSectionHeader.foreground": "#FFFFFF", // Texte des titres
    // "list.activeSelectionBackground": "#007ACC", // Fond de l'élément sélectionné
    // "list.activeSelectionForeground": "#691a1a", // Texte de l'élément sélectionné
    "list.inactiveSelectionBackground": "#3A3D41", // Fond de l'élément non actif
    // "list.inactiveSelectionForeground": "#8b2b2b", // Texte de l'élément non actif

    // EDITEUR DE TEXTE

    // "editor.background": "#1E1E1E", // Couleur de fond
    // "editor.foreground": "#D4D4D4", // Couleur du texte
    "editorIndentGuide.background1": "#444444", // Couleur des guides inactifs
    "editorIndentGuide.activeBackground1": "#FFFFFF" // Couleur des guides actifs
  },

  // Ouvrir dans un nouvel onglet
  "workbench.editor.enablePreview": true,

  "workbench.startupEditor": "none",
  "workbench.tree.indent": 14,

  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.suggestSelection": "recentlyUsed",
    "editor.suggest.showKeywords": false
  },

  // MATERIAL ICON THEME

  "material-icon-theme.hidesExplorerArrows": true, // Affiche ou masque les flèches d'exploration
  "material-icon-theme.folders.theme": "specific", // Thème des dossiers
  "material-icon-theme.folders.color": "#90a4ae", // Couleur des dossiers

  "files.exclude": {
    "USE_GITIGNORE": true
  },
  "javascript.validate.enable": false,
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/coverage": true,
    "**/dist": true,
    "**/build": true,
    "**/.build": true,
    "**/.gh-pages": true
  },
  "javascript.updateImportsOnFileMove.enabled": "always",
  "npm.runSilent": true,
  "explorer.confirmDragAndDrop": false,
  "editor.formatOnPaste": false,
  "files.autoSave": "onFocusChange",
  "editor.cursorSmoothCaretAnimation": "off",
  "editor.smoothScrolling": true,
  "explorer.confirmDelete": false,

  "window.zoomLevel": 0,
  "git.autofetch": true,
  "explorer.confirmPasteNative": false,

  "terminal.integrated.defaultProfile.windows": "Ubuntu-22.04 (WSL)",
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": false,
    "scminput": false,
    "typescript": true
  },
  "git.openRepositoryInParentFolders": "never",
  "typescript.updateImportsOnFileMove.enabled": "always"
}
